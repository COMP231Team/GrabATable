<%- include('../partials/header'); %>
<%- include('../partials/navbarCustomer'); %>

  <head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  </head>

  <div class="container">
    <br>
    <div class="p-1">
      <h1 class="display-5"><%= restaurantName %></h1>
    </div>

    <div class="jumbotron">
      <div class="container">
        <form method="POST">
          <div class="p-1 text-center">
            <h4 class="display-6">Booking Details</h4>
          </div>
          <div class="row">
            <div class="col">
              <label for="name" class="form-label">Name:</label>
              <input type="text" class="form-control" id="Name" placeholder="Enter name" name="Name"
                value="<%= reservation.Guest %>">
            </div>
            <div class="col">
              <label for="phone" class="form-label">Phone:</label>
              <input type="text" class="form-control" id="Phone" placeholder="Enter Phone" name="Phone"
                value="<%= reservation.Phone %>">
            </div>
          </div>
          </br>
          <div class="row">
            <div class="col">
              <label for="email" class="form-label">Email:</label>
              <input type="email" class="form-control" id="Email" placeholder="Enter email" name="Email"
                value="<%= reservation.Email %>">
            </div>
            <div class="col">
              <label for="phone" class="form-label">Booking Date:</label>
              <input type="date" class="form-control" id="Date" name="Date" value="<%= resDate %>">
            </div>
          </div>
          </br>
          <div class="row">
            <div class="col">
              <label for="phone" class="form-label">Number of Guests:</label>
              <input type="number" class="form-control" id="Guests" placeholder="Enter number of Guests" name="Guests"
                max="20" min="1" value="<%= reservation.NumberOfGuests %>">
            </div>
          </div>
          <div class="mb-3 mt-3">
            <label for="notes">Additional Notes:</label>
            <textarea class="form-control" rows="5" id="Notes" name="Notes" value="<%= reservation.Notes %>"></textarea>
          </div>
          <div class="row">
            <div class="col">
              <button name="choice" type="submit" class="btn btn-primary" value='1'>Modify</button>
              <button name="choice" type="submit" class="btn btn-danger" value='2'>Delete</button>
              <button name="choice" type="submit" class="btn btn-primary" value='3'>Home</button>
            </div>
          </div>
        </form>
      </div>
    </div>

    

    <%- include('../partials/footer'); %>