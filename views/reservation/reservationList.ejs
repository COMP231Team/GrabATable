<%- include('../partials/navbarVendor'); %>

<div class="container my-4" > 
  <div class="row">
      <div class="col">
         <table class="table table-striped table-bordered table-hover">
          <thead class="table-active">
           
              <tr class="text-center">
                 <th scope="col">Guest Name</th>
                 <th scope="col">Party Size</th>
                 <th scope="col">Selected Time</th>
                 <th scope="col">Phone</th>
                 <th scope="col">Email</th>
                 <th></th>                 
              </tr>        
          </thead>  
          <% if(restaurant) {%>
          <tbody>
         
            <%  for(let idx =0;idx < restaurant.Reservations.length; idx++ ){  %>
              <tr class="text-center">
               
                <td scope="row"><%= restaurant.Reservations[idx].Guest%></td>
                <td><%= restaurant.Reservations[idx].NumberOfGuests%></td>
                <td><%= restaurant.Reservations[idx].Date%></td>
                <td><%= restaurant.Reservations[idx].Phone%></td>
                <td><%= restaurant.Reservations[idx].Email%></td>
                <td class="text-center"><a href="" class="btn btn-danger btn-sm edit"><i class="fa-solid fa-pen-to-square"></i> Modify</a></td> 
              </tr>     
              <%  } %> 
    </tbody>
    <% }%>
   </table>
      </div>
  </div>
  </div>

