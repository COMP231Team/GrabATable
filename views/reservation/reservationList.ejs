<%- include('../partials/header'); %>
<%- include('../partials/navbarCustomer'); %>

<div class="container" > 
    <form  method="POST" style="margin-bottom:1em;margin-top:1em" >
       <input  type="text" placeholder="Enter restaurant name" name="Name">
       <input  type="submit" value="check">
    </form>  
  <div class="row">
      <div class="col">
         <table class="table table-striped table-bordered table-hover">
          <thead class="table-primary">
           
              <tr class="text-center">
                 <th scope="col" >Customer Name</th>
                 <th scope="col" >Party Size</th>
                 <th scope="col">Selected Time</th>
                 <th scope="col">Contact Phone</th>
                 <th scope="col">Email</th>
                 <th></th>                 
              </tr>        
          </thead>  
          <% if(restaurant) {%>
          <tbody>
         
            <%  for(let idx =0;idx < restaurant.Reservations.length; idx++ ){  %>
              <tr class="text-center">
               
                <td scope="row"><%= restaurant.Reservations[idx].Guest%></td>
                <td><%= restaurant.Reservations[idx].NumberOfGuests%></td>
                <td><%= restaurant.Reservations[idx].Date%></td>
                <td><%= restaurant.Reservations[idx].Phone%></td>
                <td><%= restaurant.Reservations[idx].Email%></td>
                <td class="text-center"><a href="/reservation/editBooking/<%= restaurant.Reservations[idx]._id%>" class="btn btn-danger btn-sm edit"><i class="fa-solid fa-pen-to-square"></i> Modify</a></td> 
              </tr>     
              <%  } %> 
    </tbody>
    <% }%>
   </table>
      </div>
  </div>
  </div>

  <%- include('../partials/footer.ejs'); %>

